<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/str_see_word_list_heading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/see_word_list_heading" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_below="@id/see_word_list_heading"
        android:layout_width="match_parent"
        android:layout_height="453.5dp"
        android:id="@+id/see_word_listview" />
    <Button
        android:text="@string/str_exit"
        android:layout_width="match_parent"
        android:layout_below="@id/see_word_listview"
        android:layout_height="wrap_content"
        android:id="@+id/see_word_list_exit_button" />


</RelativeLayout>
