<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">
    <TextView
        android:text="@string/str_choose_set_heading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_set_heading" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="@drawable/list"
        android:layout_width="match_parent"
        android:layout_height="453.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/choose_set_heading"
        android:id="@+id/choose_set_listview" />
    
    <TextView
        android:text="@string/str_nothing"
        android:layout_below="@id/choose_set_listview"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_set_show_set_heading" />


    <TextView
        android:text="@string/str_nothing"
        android:layout_below="@id/choose_set_show_set_heading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_set_chosen_sets" />

    <Button
        android:text="@string/str_start"
        android:layout_below="@id/choose_set_chosen_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_set_start_button" />

</RelativeLayout>