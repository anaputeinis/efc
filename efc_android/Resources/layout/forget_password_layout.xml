<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F0F0">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"   
    android:padding="16dp"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"
    android:background="#F0F0F0">  
     <TextView
            android:text="@string/str_welcome"
            style="@style/big_text"
            android:background="@drawable/edit_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="92.5dp"
            android:id="@+id/forget_view_3" />
    <TextView   
        android:layout_below="@id/forget_view_3"
        android:id="@+id/forget_message"  
        style="@style/usual_text"
        android:text="@string/str_password_reset_message"  
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dp" />  
     <TextView  
        android:id="@+id/forget_view_1"
        android:layout_below="@id/forget_message"  
        android:text="Large Text"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dp" />  
    <EditText  
            android:background="@drawable/edit_text"
            android:layout_marginTop="20dp"
            android:layout_below="@id/forget_view_1"
            style="@style/usual_text"
            android:hint="@string/str_enter_your_email"  
            android:id="@+id/forget_email"  
            android:inputType="textCapWords"  
            android:maxLines="1"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content" />  
        
      <TextView  
        android:id="@+id/forget_view_2"
        android:layout_below="@id/forget_email"  
        android:text="Large Text"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dp" />  
    <Button  
        android:layout_below="@+id/forget_view_2"  
        android:id="@+id/forget_btn_reset"  
        android:text="@string/str_reset_password"   
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:background="@drawable/new_button"
        style="@style/button_text" />  
    <TextView  
        android:layout_below="@+id/forget_btn_reset" 
        android:background="@drawable/new_button_bland"
        style="@style/button_text_bland"
        android:id="@+id/forget_btn_back"  
        android:text="@string/str_back"  
        android:layout_centerHorizontal="true"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"   />  
    <TextView
        android:text="@string/str_blank"
        android:visibility="gone"
        style="@style/usual_text"
        android:background="@drawable/warning_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget_btn_back"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password_warning" />  
</RelativeLayout>  
</ScrollView>