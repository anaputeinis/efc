<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Medium Text"
        style="@style/usual_text_for_list"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="235.5dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/adapter_plain_textview" />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2D2D2"
        android:id="@+id/plain_layout"
        android:layout_below="@id/adapter_plain_textview">
    <TextView
        android:text="Small Text"
        style="@style/small_text_bland_for_list"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_plain_textview_small" />
</RelativeLayout>

</RelativeLayout>
