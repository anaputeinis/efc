<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">
        <TextView
        android:text="Medium Text"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_view" />
        <EditText
            android:text="@string/str_blank"
            android:background="@drawable/edit_text"
            style="@style/usual_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_item_search" />
        <Button
            android:text="@string/str_search"
            android:background="@drawable/new_button"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_item_search_button" />
        <TextView
            android:text="@string/str_blank"
            style="@style/small_text_bland"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_item_warning" />
    <ListView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/list"
        android:id="@+id/find_item_listview" />
    </LinearLayout>
